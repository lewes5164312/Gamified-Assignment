<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:id="@+id/middle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/country_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:layout_marginTop="50dp"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/country_image_iv"
                android:layout_width="225dp"
                android:layout_height="150dp"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/country_name_tv" />

            <TextView
                android:id="@+id/continent_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continent"
                android:layout_marginTop="32dp"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/country_image_iv"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/continent_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continent Text"
                app:layout_constraintTop_toBottomOf="@id/continent_label"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/capital_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capital"
                android:layout_marginTop="48dp"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/continent_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/capital_tv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Capital Text"
                app:layout_constraintTop_toBottomOf="@id/capital_label"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/language_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language"
                android:layout_marginTop="48dp"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/capital_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/language_tv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Language Text"
                app:layout_constraintTop_toBottomOf="@id/language_label"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/area_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="@id/continent_label"
                app:layout_constraintStart_toEndOf="@id/middle"/>

            <TextView
                android:id="@+id/area_tv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Area Text"
                app:layout_constraintTop_toBottomOf="@id/area_label"
                app:layout_constraintStart_toEndOf="@id/middle"/>

            <TextView
                android:id="@+id/pop_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pop"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="@id/capital_label"
                app:layout_constraintStart_toEndOf="@id/middle"/>

            <TextView
                android:id="@+id/pop_tv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Pop Text"
                app:layout_constraintTop_toBottomOf="@id/pop_label"
                app:layout_constraintStart_toEndOf="@id/middle"/>

            <TextView
                android:id="@+id/gdp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GDP"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="@id/language_label"
                app:layout_constraintStart_toEndOf="@id/middle"/>

            <TextView
                android:id="@+id/gdp_tv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="GDP Text"
                app:layout_constraintTop_toBottomOf="@id/gdp_label"
                app:layout_constraintStart_toEndOf="@id/middle"/>

            <TextView
                android:id="@+id/desc_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginTop="48dp"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/language_tv"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description Text"
                app:layout_constraintTop_toBottomOf="@id/desc_label"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
